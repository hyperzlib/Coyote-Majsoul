{
  "include": [
    "server/",
    "user/",
    "utils/"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "outDir": "dist-server",
    "isolatedModules": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strictNullChecks": true
  }
}
