{
  "include": [
    "server/**/*.ts",
  ],
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "rootDir": "server",
    "outDir": "dist-server",
    "isolatedModules": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strictNullChecks": true
  }
}
